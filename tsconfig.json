{
  "extends": "./src/ambire-common/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-native",
    "module": "ES2020",
    "lib": ["ES2020", "ESNext", "DOM"],
    "types": ["chrome", "firefox-webext-browser", "reflect-metadata", "jest"],
    "paths": {
      "@ambire-common/*": ["src/ambire-common/src/*"],
      "@contracts/*": ["src/ambire-common/contracts/*"],
      "@ambire-common-v1/*": ["src/ambire-common/v1/*"],
      "@common/*": ["src/common/*"],
      "@mobile/*": ["src/mobile/*"],
      "@web/*": ["src/web/*"],
      "@benzin/*": ["src/benzin/*"],
      "@legends/*": ["src/legends/*"],
    }
  },
  "exclude": [
    "node_modules",
    "ios",
    "android",
    "safari-extension",
    "build",
    "coverage",
    ".expo",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "index.js"
  ]
}
